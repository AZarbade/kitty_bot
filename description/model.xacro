<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

	<!-- * * * Link Definitions * * * -->

 	<link name="base_link">
        <origin xyz="0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
	</link>

    <joint name="chassis_joint" type="fixed">
        <origin xyz="0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="chassis">
        <visual name="">
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.3" length="0.15"/>
            </geometry>
            <material name="c">
                <color rgba="0 0.9 0.9 1.0"/>
            </material>
        </visual>
        <xacro:inertial_cylinder mass="0.5" length="0.15" radius="0.3">
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="left_wheel_joint" type="revolute">
        <origin xyz="0.15 0.175 0.0" rpy="-1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 1"/>
        <limit lower="-5" upper="5" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="left_wheel">
        <visual name="">
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_wheel_joint" type="revolute">
        <origin xyz="0.15 -0.175 0.0" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 -1"/>
        <limit lower="-5" upper="5" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="right_wheel">
        <visual name="">
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="caster_joint" type="fixed">
        <origin xyz="0.4 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="castor"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="castor">
        <visual name="">
            <origin xyz="0.0 0.05 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <material name="orange">
                <color rgba="1.0 1.0 0.0 1.0"/>
            </material>
        </visual>
        <xacro:inertial_box mass="0.1" x="0.05" y="0.05" z="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

</robot>